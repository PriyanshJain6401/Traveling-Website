
<% layout("layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>" class="a-link">
                <div class="card listing-card">
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing_img" style="height: 20rem ;border-radius:1rem;">
                    <div class="card-img-overlay">abcd</div>
                    <div class="card-body">
                        <b><p><%= listing.title %></b> 
                        <br>&#8377;<%=listing.price.toLocaleString("en-IN")%>/night</p>   
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
